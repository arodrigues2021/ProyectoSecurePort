<div class="panel-body">
	<div class="row">
		<div class="col-sm-8">
			@(this.Html.Kendo().Grid<SecurePort.Entities.Models.AltaPerfiles>().Name("GridQuitarPerfiles")
				  .Columns(columns =>
				  {
					  columns.Bound(o => o.Id).Width(1).Groupable(false).Sortable(false).Filterable(false).Hidden(true);
					  columns.Bound(o => o.Nombre).Title("Nombre").HtmlAttributes(new { style = "text-align: left;" }).Width(90);
				  })
				  .HtmlAttributes(new { style = "height: 450px" })
				  .Selectable(selectable => selectable.Mode(GridSelectionMode.Multiple))
				  .DataSource(dataSource => dataSource.Ajax()
					  .PageSize(20)
					  .Model(model => model.Id(p => p.Id))
					  .Read(read => read.Action("BuscadorPerfiles", "Grupos")))
				  .Sortable(sortable => sortable.AllowUnsort(true)
					  .SortMode(GridSortMode.MultipleColumn))
				  .Filterable()
				  .Scrollable()
				  )
		</div>
	</div>
</div>