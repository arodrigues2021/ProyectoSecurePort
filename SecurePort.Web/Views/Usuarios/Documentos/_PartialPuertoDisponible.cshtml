<input type="text" id="IdPuerto"  name="IdPuerto"  style="display: none">
<div class="panel-body">
	<div class="row">
		<div class="col-md-10">
			@(this.Html.Kendo().Grid<SecurePort.Entities.Models.PuertosViewModel>().Name("GridPuertos")
				  .Columns(columns =>
				  {
					  columns.Bound(o => o.Id).Hidden(true).Groupable(false).Sortable(false).Filterable(false);
					  columns.Bound(o => o.Nombre).Title("Nombre").HtmlAttributes(new { style = "text-align: left;" }).Width(90);
				  })
				  .Events(events => events.Change("onChangePuerto"))
				  .HtmlAttributes(new { style = "height: 390px;width:80%" })
				  .Selectable(selectable => selectable.Mode(GridSelectionMode.Single))
				  .DataSource(dataSource => dataSource.Ajax()
					  .PageSize(15)
					  .Model(model => model.Id(p => p.Id))
					  .Read(read => read.Action("PuertosDisponibles", "Usuarios")))
				  .Sortable(sortable => sortable.AllowUnsort(true)
				  .SortMode(GridSortMode.MultipleColumn))
				  .Filterable()
				  .Scrollable()
                  .Pageable()
			 )
		</div>
	</div>
</div>
