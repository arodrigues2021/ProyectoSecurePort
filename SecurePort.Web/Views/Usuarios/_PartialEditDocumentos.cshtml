@model SecurePort.Entities.Models.Documento

<div class="row">
    <div class="col-md-12" style="margin-top: -2%; margin-left: -2%; margin-right: -2%;">
         <div class="panel-heading" style="width:790px;" >
				<a data-original-title="Ayuda" data-placement="bottom" data-style="top" class="clip-user-2 tooltips" onclick=" Ayuda() "  ></a>
				<strong>Modificar Documentos Asociados Usuarios</strong>
			</div>
        <!-- start: FORM VALIDATION 1 PANEL -->
        <div class="panel-body">
            <hr>
            <div class="form-group"  style="display: none">
                @(this.Html.TextBoxFor(model => model.id,new { id = "idDocumento", name = "idDocumento", @class = "form-control" }))
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">
                            Tipos Documentos
                        </label>
                        @(this.Html.DropDownList("Tipos_Documento",(SelectList)this.ViewData["Tipos_Documento"],new { id = "TiposDocumento01", @class = "form-control" }))
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">
                            Descripción <span class="symbol required"></span>
                        </label>
                        @(this.Html.TextBoxFor(model => model.descripcion,new { itemid = "Apellidos", id = "descripcion01", name = "descripcion01", @class = "form-control" }))
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">
                            Documento 
                        </label>
                        @(this.Html.TextBoxFor(model => model.documento,new { itemid = "Nombre", id = "nombre01", name = "nombre01", @class = "form-control" , disabled = "disabled"}))
                    </div>
                </div>
            </div>
            <span class="symbol required"></span>Campos requeridos
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6" style="margin-top: 4%; margin-left: 35%; display: block">
        <div class="btn-group btn-group-sm">
            @(Html.Kendo().Button()
                  .Name("ButtonDeshacer")
                  .HtmlAttributes( new {type = "button", @class = "btn btn-danger" } )
                  .Content("Deshacer").Events(ev => ev.Click("onClick")))
        
            @(Html.Kendo().Button()
                  .Name("ButtonGuardar")
                  .HtmlAttributes( new {type = "button", @class = "btn btn-primary hidden-xs" }  )
                  .Content("Guardar").Events(ev => ev.Click("onClick")))

            @(Html.Kendo().Button()
                  .Name("ButtonVolver")
                  .HtmlAttributes( new {type = "button", @class = "btn btn-default" }  )
                  .Content("Volver").Events(ev => ev.Click("onClick")))
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function() {
        $('select#TiposDocumento01.form-control').val('@(this.Model.tipodocumento)');
    });
</script>
