@model SecurePort.Entities.Models.Comunica_Centro
@{
	this.Layout = null;
    int id = Model.id; 
    string tipoCanal      = Model.Tipo_Canal.ToString();
    string color_Ad       = ViewBag.disabled_Ad == false ? " #eeeeee;color: #000000" : "#FFFFFF";
	string requerido_Ad   = ViewBag.disabled_Ad == false ? string.Empty:"symbol required";
    
}
<div class="row">
    <input type="text" id="IdValor" name="IdValor" style="display: none">

    <div class="col-md-8" style="margin-top: -2%; margin-left: -2%; margin-right: -2%;">
        <div class="panel-heading" style="width: 585px;">
            <a data-original-title="Ayuda" data-placement="bottom" data-style="top" class="clip-user-2 tooltips" onclick=" Ayuda() "></a>
            <strong>@ViewBag.MensajeAdi</strong>
        </div>
        <!-- start: FORM VALIDATION 1 PANEL -->
        <div class="panel-body">
            <hr>
            <form action="#" role="form" id="Adicionalform" onsubmit="return ValidarFormularioAd()">
                <div class="row">

                    <input type="text" id="Canal01" name="Canal01" value="@ViewBag.TipoCanalValor" style="display: none">
                    <input type="text" id="ValidadoTipo01" name="ValidadoTipo01"  style="display: none">
                    <div class="col-md-10">
                        <div class="form-group">
                                @(Html.Kendo().TextBoxFor(model =>  model.id).Name("Id_Adicional") 
										.HtmlAttributes(new { id="IDComunica01", name="IDComunica01" ,style = "display:none" }))
                            <label class="control-label">
                                @ViewBag.TipoCanal <span class='@requerido_Ad'></span>
                            </label>
                            @(Html.Kendo().TextBoxFor(model => model.Dato).Name("Dato").Enable(ViewBag.disabled_Ad)
							  .HtmlAttributes(new { itemid = "Dato", id = "Dato01", name = "Dato01", @class = "form-control", style = "background-color:" + color_Ad, onChange="Validar()", Maxlength="50" }))
                            <span id="datosDato" style="display: none; color: #b94a48;">Este campo es requerido.</span>
                            <span id="datosMail" style="display: none; color: #b94a48;">Su direcci&oacuten de correo electr&oacutenico debe estar en el formato de name@domain.com</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <label class="control-label">
                                Observación 
                            </label>
                            @(Html.Kendo().TextBoxFor(model => model.Nota).Enable(ViewBag.disabled_Ad).Name("Observacion")
							  .HtmlAttributes(new { itemid = "Nota", id = "Nota01", name = "Nota01", @class = "form-control" ,style = "background-color:" + color_Ad, Maxlength="50" }))
                        </div>
                    </div>

                </div>
                 <div class="row">
                     <div class="col-md-12">
                         <p></p>
                     </div>
                     <div class="col-md-10">
                         <div>
                             <div style="@(this.ViewBag.Combo_po)">
                                 <span class="symbol required"></span>Campos requeridos
                             </div>
                             <hr>
                         </div>
                     </div>
                 </div>
                <div class="row">
                <div class="space10" style="margin-top: -5%; margin-left: 50%; display: block">
                    <div style="@(this.ViewBag.Texto_po)">
                    @*<div class="btn-group btn-group-sm">
                        <a class="btn btn-default " href="javascript:void(0)" onclick=" VisualizarVolver(@id, @tipoCanal) ">Volver</a>
                    </div>*@
                   </div> 
                </div>
                
                <div id="Opcion02" class="space12" style="margin-left: 40%; display: block">
                    <div class="btn-group btn-group-sm">
                        <button id="RegistroAdicional" class="btn btn-primary hidden-xs" type="submit">
                            Guardar</button>
                        <a class="btn btn-default " href="javascript:void(0)" onclick=" VisualizarVolver(@id, @tipoCanal) ">Volver</a>
                    </div>
                
              </div>  
            </div>

            </form>
           

        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        //var validator = $("#Adicionalform").kendoValidator().data("kendoValidator");
        var status = $(".status");
        $('button#RegistroAdicional.btn.btn-primary.hidden-xs').click(function () {
            Validar();
            AltaEditarAdicional('@ViewBag.actionAdi');
        });

    });

    function ValidarFormularioAd() {
        var validoadi = false;

        if (!Validar())
            valido = false;

        return validoadi;

    }


</script>
