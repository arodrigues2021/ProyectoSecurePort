@model SecurePort.Entities.Models.CNAE

@{
	this.Layout = null;
}

<div class="row">
	<div class="col-md-10">
		<!-- start: FORM VALIDATION 1 PANEL -->
		<div class="panel-body">
			<h2><i class="icon-edit-sign teal"></i> Editar CNAE</h2>
			<p>
				Permite la edición de todos los Código Nacional de Actividades Económicas. 
			</p>
			<hr>
			<form action="#" role="form" id="form">
				<div class="row">
					<div class="col-md-12">
						<div class="errorHandler alert alert-danger no-display">
							<i class="icon-remove-sign"></i> Usted tiene algunos errores. Por favor, consulte más abajo.
						</div>
						<div class="successHandler alert alert-success no-display">
							<i class="icon-ok"></i> Su validación es exitosa!
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							@(this.Html.TextBoxFor(model => model.Id, new { id = "id01", name = "id01", @class = "form-control", disabled = "true" }))
						</div>
						<div class="form-group">
							<label class="control-label">
								Código <span class="symbol required"></span>
							</label>
							@(this.Html.TextBoxFor(model => model.IdCodigo, new { id = "IdCodigo01", name = "IdCodigo01", @class = "form-control" }))
						</div>

						<div class="form-group">
							<label class="control-label">
								Descripción <span class="symbol required"></span>
							</label>
							@(this.Html.TextBoxFor(model => model.Descripcion, new { id = "Descripcion01", name = "Descripcion01", @class = "form-control" }))
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div>
							<span class="symbol required"></span>Campos requeridos
							<hr>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>