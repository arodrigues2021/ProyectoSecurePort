@using System.Configuration
@{

	string nombreRuta = ConfigurationManager.AppSettings["RutaSecureDoc"] + ConfigurationManager.AppSettings["AvisoLegal"];
}

@(this.Html.Kendo().Window().Name("myWindow")
	.Title("Condiciones Legales")
	.Content(@<text>
	 <div class="armchair">
		   <object width="1100" height="650" data=@nombreRuta type="application/pdf"><param name="zoom" value="50"/></object> 
	 </div>
	 </text>)
	 .Events(ev => ev.Close("onClose"))
	 .Draggable().Resizable()
	 .Width(1200)
	 .Visible(true)
	 .Actions(actions => actions.Close()))
<style>
	.armchair {
		float: left;
		margin: 30px 30px 120px 30px;
		text-align: center;

	}
	.armchair img {
		display: block;
		margin-bottom: 10px;
	}
	@@media screen and (max-width: 1023px) {
		div.k-window {
			display: none !important;
		}
	}
</style>
<script type="text/javascript">
	jQuery(document).ready(function() {
		$('#myWindow').parent().find('span#myWindow_wnd_title.k-window-title').attr('style', 'font-weight: bold');
		$("div.k-overlay").removeAttr("style");
	});
</script>